@model ManageRoleViewModel

<h2>Manage role for @Model.User.Email</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="SelectedRole" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SelectedRole" asp-items="@Model.Roles">
                    <option disabled selected>Please selected a role</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" asp-for="@Model.User.Id" />
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
